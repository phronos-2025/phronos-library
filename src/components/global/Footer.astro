---
interface Props {
  showSubscribe?: boolean;
}

const { showSubscribe = true } = Astro.props;
---

<footer class="footer">
  {showSubscribe && (
    <div class="footer-subscribe" id="updates">
      <div class="footer-subscribe-content">
        <p class="footer-subscribe-text">Get dispatches delivered to your inbox.</p>
      </div>
      <a href="https://phronos.substack.com/subscribe" target="_blank" rel="noopener" class="footer-subscribe-button">
        Subscribe &rarr;
      </a>
    </div>
  )}

  <p class="footer-tagline">
    Phenotyping for Human Resilience, Ontological Navigation, & Open Science
  </p>

  <div class="footer-links">
    <a href="https://github.com/phronos-2025" class="footer-link" target="_blank" rel="noopener">
      GitHub
    </a>
    <span class="footer-separator">&middot;</span>
    <a href="mailto:interest@phronos.org" class="footer-link">
      Contact
    </a>
    <span class="footer-separator">&middot;</span>
    <a href="https://phronos.org/terms" class="footer-link">
      Terms
    </a>
    <span class="footer-separator">&middot;</span>
    <a href="https://phronos.org/privacy" class="footer-link">
      Privacy
    </a>
  </div>

  <p class="footer-copyright">&copy; 2026 Phronos</p>
</footer>

<style>
  @import '../../styles/components/footer.css';

  .footer-subscribe {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    margin: 0 auto 2.5rem;
    max-width: 720px;
    background: var(--paper);
    border-left: 3px solid var(--gold);
    box-shadow: inset 0 2px 8px rgba(26, 26, 26, 0.06);
  }

  .footer-subscribe-text {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    color: var(--ink);
    margin: 0;
  }

  .footer-subscribe-button {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--white);
    background: var(--ink);
    border: none;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    transition: all var(--transition-default);
    white-space: nowrap;
  }

  .footer-subscribe-button:hover {
    background: var(--gold);
    color: var(--white);
  }

  @media (max-width: 767px) {
    .footer-subscribe {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
      margin: 2rem 5%;
      max-width: none;
    }
  }
</style>
