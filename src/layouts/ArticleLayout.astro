---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Nav from '../components/global/Nav.astro';
import Footer from '../components/global/Footer.astro';

interface Props {
  article: CollectionEntry<'library'>;
}

const { article } = Astro.props;
const { data } = article;

// Confidence badge colors using Phronos design tokens
const confidenceColors = {
  high: 'var(--success)',
  moderate: 'var(--warning)',
  low: 'var(--alert)',
  mixed: 'var(--gold)',
  unknown: 'var(--faded)'
};

// Format the date
const formattedDate = new Date(data.updated).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Capitalize confidence
const confidenceLabel = data.confidence.charAt(0).toUpperCase() + data.confidence.slice(1);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <BaseHead
    title={`${data.title} | Phronos Library`}
    description={data.question}
  />

  <!-- SEO -->
  <link rel="canonical" href={`https://phronos.org/library/${data.articleSlug}/`}>

  <!-- Schema.org for GEO -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ScholarlyArticle",
    "name": data.title,
    "headline": data.question,
    "dateModified": data.updated,
    "publisher": {
      "@type": "Organization",
      "name": "Phronos"
    },
    "about": {
      "@type": "Thing",
      "name": "Cognitive phenotyping from conversational data"
    }
  })} />

  <style>
    /* Meta bar - matches Methods styling */
    .article-meta-bar {
      max-width: 800px;
      margin: 0 auto;
      padding: 4rem 5% 1.5rem;
    }

    .article-meta-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .article-meta-row + .article-meta-row {
      margin-top: 0.25rem;
    }

    .article-meta-id {
      font-family: var(--font-mono);
      font-size: 0.75rem;
      color: var(--gold);
    }

    .article-meta-center {
      font-family: var(--font-mono);
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: var(--faded);
    }

    .article-meta-link {
      text-decoration: none;
      transition: color var(--transition-fast);
    }

    .article-meta-link:hover {
      color: var(--gold);
    }

    .article-meta-confidence-group {
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }

    .article-meta-confidence-text {
      font-family: var(--font-mono);
      font-size: 0.65rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .confidence-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      display: inline-block;
      flex-shrink: 0;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.4; }
    }

    .article-meta-sources {
      font-family: var(--font-mono);
      font-size: 0.7rem;
      color: var(--faded);
    }

    .article-meta-date {
      font-family: var(--font-mono);
      font-size: 0.7rem;
      text-transform: uppercase;
      color: var(--faded);
    }

    /* Article header */
    .page-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 5% var(--space-xl);
    }

    .article-header {
      margin-bottom: var(--space-xl);
      padding-bottom: var(--space-lg);
      border-bottom: var(--border-divider);
    }

    .article-header h1 {
      font-size: var(--text-xl);
      margin-bottom: var(--space-md);
    }

    .question {
      font-family: var(--font-body);
      font-size: var(--text-lg);
      color: var(--faded);
      font-style: italic;
      line-height: 1.5;
    }

    /* Article content styling */
    .article-content {
      font-family: var(--font-body);
      font-size: var(--text-base);
      line-height: 1.8;
    }

    .article-content h1 {
      display: none; /* Hide duplicate h1 from markdown */
    }

    .article-content h2 {
      font-family: var(--font-display);
      font-size: var(--text-lg);
      margin-top: 3rem;
      margin-bottom: 1.25rem;
      padding-bottom: var(--space-sm);
      border-bottom: var(--border-divider);
    }

    .article-content h3 {
      font-family: var(--font-display);
      font-size: 1.15rem;
      font-style: italic;
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    .article-content p {
      margin-bottom: 1.25rem;
    }

    .article-content blockquote {
      border-left: 3px solid var(--gold);
      padding: var(--space-md);
      padding-left: var(--space-md);
      margin: 1.75rem 0;
      background: var(--white);
      color: var(--faded);
      font-style: italic;
    }

    .article-content ul, .article-content ol {
      margin-bottom: 1.5rem;
      padding-left: var(--space-lg);
    }

    .article-content li {
      margin-bottom: 0.5rem;
    }

    .article-content li + li {
      margin-top: 0.25rem;
    }

    .article-content a {
      color: var(--gold);
    }

    .article-content a:hover {
      color: var(--ink);
    }

    .article-content hr {
      border: none;
      border-top: var(--border-divider);
      margin: var(--space-xl) 0;
    }

    .article-content strong {
      font-weight: 600;
    }

    /* Source cards */
    .source-card {
      background: var(--white);
      border: var(--border-primary);
      padding: var(--space-md);
      margin-bottom: var(--space-md);
    }

    .source-card h4 {
      font-family: var(--font-display);
      font-size: var(--text-md);
      margin-bottom: var(--space-sm);
    }

    .source-card .meta {
      font-family: var(--font-mono);
      font-size: var(--text-xs);
      color: var(--faded);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    /* Callout boxes */
    .callout {
      background: var(--gold-dim);
      border: 1px solid var(--gold);
      padding: var(--space-md);
      margin: var(--space-lg) 0;
    }

    .article-footer {
      margin-top: var(--space-xl);
      padding-top: var(--space-lg);
      border-top: var(--border-divider);
      font-family: var(--font-mono);
      font-size: var(--text-xs);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--faded);
    }

    .article-footer p {
      margin-bottom: var(--space-sm);
    }

    @media (max-width: 600px) {
      .meta-bar {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>
</head>
<body>
  <a href="#main-content" class="skip-link">Skip to main content</a>
  <Nav currentPage="article" />

  <main id="main-content">
    <!-- Meta bar above content, matching Methods styling -->
    <div class="article-meta-bar">
      <div class="article-meta-row">
        <span class="article-meta-id">{data.id}</span>
        <a href="/library/" class="article-meta-center article-meta-link">Research Synthesis</a>
        <div class="article-meta-confidence-group">
          <span class="article-meta-confidence-text" style={`color: ${confidenceColors[data.confidence]}`}>{confidenceLabel} Confidence</span>
          <span class="confidence-dot" style={`background: ${confidenceColors[data.confidence]}`}></span>
        </div>
      </div>
      <div class="article-meta-row">
        <span class="article-meta-sources">{data.sources} sources</span>
        <span class="article-meta-date">{formattedDate}</span>
      </div>
    </div>

    <div class="page-container">
      <header class="article-header">
        <h1>{data.title}</h1>
        <p class="question">{data.question}</p>
      </header>

      <article class="article-content">
        <slot />
      </article>

      <footer class="article-footer">
        <p>Part of the <a href="/library/">Phronos Library</a> &mdash; research synthesis for cognitive self-observation.</p>
        <p>Article ID: {data.id} | Status: {data.status}</p>
      </footer>
    </div>
  </main>

  <Footer showSubscribe={true} />
</body>
</html>
