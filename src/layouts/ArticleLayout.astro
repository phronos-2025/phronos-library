---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Nav from '../components/global/Nav.astro';
import Footer from '../components/global/Footer.astro';

interface Props {
  article: CollectionEntry<'library'>;
}

const { article } = Astro.props;
const { data } = article;

// Confidence badge colors using Phronos design tokens
const confidenceColors = {
  high: 'var(--success)',
  moderate: 'var(--warning)',
  low: 'var(--alert)',
  mixed: 'var(--gold)',
  unknown: 'var(--faded)'
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <BaseHead
    title={`${data.title} | Phronos Library`}
    description={data.question}
  />

  <!-- SEO -->
  <link rel="canonical" href={`https://phronos.org/library/${data.articleSlug}/`}>

  <!-- Schema.org for GEO -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ScholarlyArticle",
    "name": data.title,
    "headline": data.question,
    "dateModified": data.updated,
    "publisher": {
      "@type": "Organization",
      "name": "Phronos"
    },
    "about": {
      "@type": "Thing",
      "name": "Cognitive phenotyping from conversational data"
    }
  })} />

  <style>
    .skip-link {
      position: absolute;
      top: -40px;
      left: 0;
      background: var(--ink);
      color: var(--white);
      padding: var(--space-sm) var(--space-md);
      z-index: 1000;
      text-decoration: none;
    }

    .skip-link:focus {
      top: 0;
    }

    .page-container {
      max-width: 800px;
      margin: 0 auto;
      padding: var(--space-xl) 5%;
    }

    .breadcrumb {
      font-family: var(--font-mono);
      font-size: var(--text-xs);
      text-transform: uppercase;
      letter-spacing: 0.1em;
      margin-bottom: var(--space-lg);
    }

    .breadcrumb a {
      color: var(--faded);
      text-decoration: none;
    }

    .breadcrumb a:hover {
      color: var(--gold);
    }

    .breadcrumb span {
      color: var(--faded);
      margin: 0 var(--space-sm);
    }

    .article-header {
      margin-bottom: var(--space-xl);
      padding-bottom: var(--space-lg);
      border-bottom: var(--border-divider);
    }

    .meta-bar {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-md);
      align-items: center;
      margin-bottom: var(--space-md);
      font-family: var(--font-mono);
      font-size: var(--text-xs);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--faded);
    }

    .confidence-badge {
      display: inline-flex;
      align-items: center;
      gap: var(--space-xs);
      padding: var(--space-xs) var(--space-sm);
      border: 1px solid currentColor;
      font-weight: 500;
    }

    .confidence-dot {
      width: 6px;
      height: 6px;
      border-radius: 50%;
    }

    .article-header h1 {
      font-size: var(--text-xl);
      margin-bottom: var(--space-md);
    }

    .question {
      font-family: var(--font-body);
      font-size: var(--text-lg);
      color: var(--faded);
      font-style: italic;
      line-height: 1.5;
    }

    /* Article content styling */
    .article-content {
      font-family: var(--font-body);
      font-size: var(--text-base);
      line-height: 1.8;
    }

    .article-content h1 {
      display: none; /* Hide duplicate h1 from markdown */
    }

    .article-content h2 {
      font-family: var(--font-display);
      font-size: var(--text-lg);
      margin-top: var(--space-xl);
      margin-bottom: var(--space-md);
      padding-bottom: var(--space-sm);
      border-bottom: var(--border-divider);
    }

    .article-content h3 {
      font-family: var(--font-display);
      font-size: 1.15rem;
      font-style: italic;
      margin-top: var(--space-lg);
      margin-bottom: var(--space-sm);
    }

    .article-content p {
      margin-bottom: var(--space-md);
    }

    .article-content blockquote {
      border-left: 3px solid var(--gold);
      padding: var(--space-md);
      padding-left: var(--space-md);
      margin: var(--space-lg) 0;
      background: var(--white);
      color: var(--faded);
      font-style: italic;
    }

    .article-content ul, .article-content ol {
      margin-bottom: var(--space-md);
      padding-left: var(--space-lg);
    }

    .article-content li {
      margin-bottom: var(--space-sm);
    }

    .article-content a {
      color: var(--gold);
    }

    .article-content a:hover {
      color: var(--ink);
    }

    .article-content hr {
      border: none;
      border-top: var(--border-divider);
      margin: var(--space-xl) 0;
    }

    .article-content strong {
      font-weight: 600;
    }

    /* Source cards */
    .source-card {
      background: var(--white);
      border: var(--border-primary);
      padding: var(--space-md);
      margin-bottom: var(--space-md);
    }

    .source-card h4 {
      font-family: var(--font-display);
      font-size: var(--text-md);
      margin-bottom: var(--space-sm);
    }

    .source-card .meta {
      font-family: var(--font-mono);
      font-size: var(--text-xs);
      color: var(--faded);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    /* Callout boxes */
    .callout {
      background: var(--gold-dim);
      border: 1px solid var(--gold);
      padding: var(--space-md);
      margin: var(--space-lg) 0;
    }

    .article-footer {
      margin-top: var(--space-xl);
      padding-top: var(--space-lg);
      border-top: var(--border-divider);
      font-family: var(--font-mono);
      font-size: var(--text-xs);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--faded);
    }

    .article-footer p {
      margin-bottom: var(--space-sm);
    }

    @media (max-width: 600px) {
      .meta-bar {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>
</head>
<body>
  <a href="#main-content" class="skip-link">Skip to main content</a>
  <Nav currentPage="article" />

  <main id="main-content">
    <div class="page-container">
      <nav class="breadcrumb">
        <a href="/library/">Library Index</a>
        <span>&middot;</span>
        <a href="https://instruments.phronos.org">Instruments</a>
      </nav>

      <header class="article-header">
        <div class="meta-bar">
          <span class="confidence-badge" style={`color: ${confidenceColors[data.confidence]}`}>
            <span class="confidence-dot" style={`background: ${confidenceColors[data.confidence]}`}></span>
            {data.confidence} confidence
          </span>
          <span>{data.sources} sources</span>
          <span>Updated {data.updated}</span>
        </div>
        <h1>{data.title}</h1>
        <p class="question">{data.question}</p>
      </header>

      <article class="article-content">
        <slot />
      </article>

      <footer class="article-footer">
        <p>Part of the <a href="/library/">Phronos Library</a> &mdash; research synthesis for cognitive self-observation.</p>
        <p>Article ID: {data.id} | Status: {data.status}</p>
      </footer>
    </div>
  </main>

  <Footer showSubscribe={true} />
</body>
</html>
