---
import type { CollectionEntry } from 'astro:content';

interface Props {
  article: CollectionEntry<'library'>;
}

const { article } = Astro.props;
const { data } = article;

// Confidence badge colors
const confidenceColors = {
  high: '#16a34a',
  moderate: '#ca8a04',
  low: '#dc2626',
  mixed: '#6366f1'
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{data.title} | Phronos Library</title>
  <meta name="description" content={data.question}>

  <!-- SEO -->
  <link rel="canonical" href={`https://phronos.org/library/${data.articleSlug}/`}>

  <!-- Schema.org for GEO -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ScholarlyArticle",
    "name": data.title,
    "headline": data.question,
    "dateModified": data.updated,
    "publisher": {
      "@type": "Organization",
      "name": "Phronos"
    },
    "about": {
      "@type": "Thing",
      "name": "Cognitive phenotyping from conversational data"
    }
  })} />

  <style>
    :root {
      --color-text: #1a1a1a;
      --color-text-muted: #666;
      --color-bg: #fff;
      --color-border: #e5e5e5;
      --color-accent: #2563eb;
      --font-sans: system-ui, -apple-system, sans-serif;
      --font-serif: Georgia, serif;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      font-size: 18px;
      line-height: 1.6;
    }

    body {
      font-family: var(--font-sans);
      color: var(--color-text);
      background: var(--color-bg);
      max-width: 48rem;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }

    header {
      margin-bottom: 3rem;
      border-bottom: 1px solid var(--color-border);
      padding-bottom: 2rem;
    }

    .meta {
      display: flex;
      gap: 1rem;
      align-items: center;
      margin-bottom: 1rem;
      font-size: 0.875rem;
      color: var(--color-text-muted);
    }

    .confidence-badge {
      display: inline-block;
      padding: 0.125rem 0.5rem;
      border-radius: 4px;
      font-weight: 500;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: white;
    }

    h1 {
      font-family: var(--font-serif);
      font-size: 2rem;
      font-weight: 400;
      line-height: 1.2;
      margin-bottom: 1rem;
    }

    .question {
      font-size: 1.25rem;
      color: var(--color-text-muted);
      font-style: italic;
    }

    main h2 {
      font-size: 1.25rem;
      margin-top: 2.5rem;
      margin-bottom: 1rem;
      border-bottom: 1px solid var(--color-border);
      padding-bottom: 0.5rem;
    }

    main h3 {
      font-size: 1.1rem;
      margin-top: 2rem;
      margin-bottom: 0.75rem;
    }

    main p {
      margin-bottom: 1rem;
    }

    main blockquote {
      border-left: 3px solid var(--color-accent);
      padding-left: 1rem;
      margin: 1.5rem 0;
      color: var(--color-text-muted);
      font-style: italic;
    }

    main ul, main ol {
      margin-bottom: 1rem;
      padding-left: 1.5rem;
    }

    main li {
      margin-bottom: 0.5rem;
    }

    main a {
      color: var(--color-accent);
    }

    .source-card {
      background: #f9fafb;
      border: 1px solid var(--color-border);
      border-radius: 8px;
      padding: 1rem;
      margin-bottom: 1rem;
    }

    .source-card h4 {
      font-size: 1rem;
      margin-bottom: 0.5rem;
    }

    .source-card .meta {
      font-size: 0.8rem;
    }

    footer {
      margin-top: 4rem;
      padding-top: 2rem;
      border-top: 1px solid var(--color-border);
      font-size: 0.875rem;
      color: var(--color-text-muted);
    }

    .nav-link {
      display: inline-block;
      margin-right: 1rem;
    }
  </style>
</head>
<body>
  <nav>
    <a href="/library/" class="nav-link">Library Index</a>
    <a href="https://instruments.phronos.org" class="nav-link">Instruments</a>
  </nav>

  <header>
    <div class="meta">
      <span class="confidence-badge" style={`background: ${confidenceColors[data.confidence]}`}>
        {data.confidence} confidence
      </span>
      <span>{data.sources} sources</span>
      <span>Updated {data.updated}</span>
    </div>
    <h1>{data.title}</h1>
    <p class="question">{data.question}</p>
  </header>

  <main>
    <slot />
  </main>

  <footer>
    <p>Part of the <a href="/library/">Phronos Library</a> â€” research synthesis for cognitive self-observation.</p>
    <p>Article ID: {data.id} | Status: {data.status}</p>
  </footer>
</body>
</html>
