---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Nav from '../components/global/Nav.astro';
import Footer from '../components/global/Footer.astro';

const articles = await getCollection('library');
const sortedArticles = articles.sort((a, b) => {
  // Sort by ID number (LIB-001, LIB-002, etc.)
  const aNum = parseInt(a.data.id.replace('LIB-', ''));
  const bNum = parseInt(b.data.id.replace('LIB-', ''));
  return aNum - bNum;
});

const confidenceColors = {
  high: 'var(--success)',
  moderate: 'var(--warning)',
  low: 'var(--alert)',
  mixed: 'var(--gold)'
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <BaseHead
    title="Phronos Library | Research Synthesis for Cognitive Self-Observation"
    description="A curated synthesis of research on measuring cognitive phenotypes from conversational data. Organized by testable hypotheses with explicit confidence levels."
  />

  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Phronos Library",
    "url": "https://phronos.org/library/",
    "description": "Research synthesis for cognitive self-observation"
  }
  </script>

  <style>
    .library-page {
      min-height: 100vh;
    }

    .library-hero {
      max-width: 1200px;
      margin: 0 auto;
      padding: 4rem 2rem 2rem;
    }

    .library-label {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 1rem;
    }

    .library-label-line {
      width: 40px;
      height: 2px;
      background: var(--ink);
    }

    .library-label-text {
      font-family: var(--font-mono);
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--faded);
    }

    .library-title {
      font-family: var(--font-serif);
      font-size: 2.75rem;
      font-weight: 400;
      color: var(--ink);
      margin-bottom: 1rem;
    }

    .library-intro {
      font-family: var(--font-body);
      font-size: 1.1rem;
      color: var(--faded);
      max-width: 600px;
      line-height: 1.7;
    }

    .library-cards {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem 4rem;
    }

    .card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
      gap: 1.5rem;
    }

    /* Article Card - matches method-card styling */
    .article-card {
      background: var(--white);
      border: 1px solid var(--ink);
      display: flex;
      flex-direction: column;
      transition: transform var(--transition-default), box-shadow var(--transition-default);
    }

    .article-card:hover {
      transform: translate(-2px, -2px);
      box-shadow: 5px 5px 0px rgba(26, 26, 26, 0.1);
    }

    .article-card--disabled {
      opacity: 0.7;
    }

    .article-card--disabled:hover {
      transform: none;
      box-shadow: none;
      cursor: default;
    }

    .article-card-header {
      padding: 1.5rem;
      text-decoration: none;
      color: inherit;
      display: block;
    }

    .article-card-header:hover .card-title {
      color: var(--gold);
    }

    .article-card-header--disabled:hover .card-title {
      color: var(--ink);
    }

    .card-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.75rem;
    }

    .card-id {
      font-family: var(--font-mono);
      font-size: 0.75rem;
      color: var(--gold);
    }

    .card-status-group {
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }

    .card-status-text {
      font-family: var(--font-mono);
      font-size: 0.65rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: var(--faded);
    }

    .status-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      display: inline-block;
      flex-shrink: 0;
    }

    .status-dot.published {
      background: var(--success);
      animation: pulse 2s infinite;
    }

    .status-dot.drafting {
      background: var(--gold);
    }

    .status-dot.editing {
      background: var(--gold);
      animation: pulse-gold 2s infinite;
    }

    @keyframes pulse-gold {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.4; }
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.4; }
    }

    .card-title {
      font-family: var(--font-serif);
      font-size: 1.25rem;
      font-weight: 400;
      line-height: 1.3;
      color: var(--ink);
      margin-bottom: 0.5rem;
      transition: color var(--transition-fast);
    }

    .card-description {
      font-family: var(--font-serif);
      font-size: 0.95rem;
      font-style: italic;
      line-height: 1.5;
      color: var(--faded);
      margin: 0;
    }

    /* Card Footer with confidence and sources */
    .card-footer {
      border-top: 1px solid var(--faded-light);
      padding: 0.75rem 1.5rem;
      margin-top: auto;
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .confidence-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      font-family: var(--font-mono);
      font-size: 0.65rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 0.25rem 0.5rem;
      border: 1px solid currentColor;
    }

    .confidence-dot {
      width: 5px;
      height: 5px;
      border-radius: 50%;
    }

    .card-sources {
      font-family: var(--font-mono);
      font-size: 0.65rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: var(--faded);
    }

    .empty-state {
      font-family: var(--font-serif);
      font-size: var(--text-lg);
      font-style: italic;
      color: var(--faded);
      text-align: center;
      padding: var(--space-xl);
    }

    @media (max-width: 768px) {
      .library-hero {
        padding: 3rem 1rem 1.5rem;
      }

      .library-title {
        font-size: 2rem;
      }

      .library-cards {
        padding: 0 1rem 3rem;
      }

      .card-grid {
        grid-template-columns: 1fr;
      }

      .article-card-header {
        padding: 1.25rem 1rem;
      }

      .card-title {
        font-size: 1.1rem;
      }

      .card-footer {
        padding: 0.6rem 1rem;
      }
    }
  </style>
</head>
<body>
  <a href="#main-content" class="skip-link">Skip to main content</a>
  <Nav currentPage="library" />

  <main id="main-content">
    <div class="library-page">
      <header class="library-hero">
        <div class="library-label">
          <span class="library-label-line"></span>
          <span class="library-label-text">Research Synthesis</span>
        </div>
        <h1 class="library-title">Library</h1>
        <p class="library-intro">
          A curated synthesis of research relevant to measuring cognitive
          phenotypes from conversational data.
        </p>
      </header>

      <section class="library-cards">
        <div class="card-grid">
          {sortedArticles.length > 0 ? (
            sortedArticles.map((article) => {
              const isEditing = article.data.status === 'editing';
              return (
              <article class={`article-card ${isEditing ? 'article-card--disabled' : ''}`}>
                {isEditing ? (
                  <div class="article-card-header article-card-header--disabled">
                    <div class="card-meta">
                      <span class="card-id">{article.data.id}</span>
                      <div class="card-status-group">
                        <span class="card-status-text">{article.data.status}</span>
                        <span class={`status-dot ${article.data.status}`}></span>
                      </div>
                    </div>
                    <h3 class="card-title">{article.data.title}</h3>
                    <p class="card-description">{article.data.question}</p>
                  </div>
                ) : (
                  <a href={`/library/${article.data.articleSlug}/`} class="article-card-header">
                    <div class="card-meta">
                      <span class="card-id">{article.data.id}</span>
                      <div class="card-status-group">
                        <span class="card-status-text">{article.data.status}</span>
                        <span class={`status-dot ${article.data.status}`}></span>
                      </div>
                    </div>
                    <h3 class="card-title">{article.data.title}</h3>
                    <p class="card-description">{article.data.question}</p>
                  </a>
                )}

                <div class="card-footer">
                  <span class="card-sources">{article.data.sources} sources</span>
                </div>
              </article>
            );})
          ) : (
            <p class="empty-state">Articles coming soon.</p>
          )}
        </div>
      </section>
    </div>
  </main>

  <Footer showSubscribe={true} />
</body>
</html>
